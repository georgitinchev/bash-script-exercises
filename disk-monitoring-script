#!/bin/bash
# Disk Space Usage Monitoring Script

echo "===== Disk Space Monitoring ====="

# Set the threshold (in percentage) for disk usage
THRESHOLD=80

# Get the disk usage percentage for the root directory
DISK_USAGE=$(df / | grep / | awk '{ print $5 }' | sed 's/%//g')

# Check if the disk usage exceeds the threshold
if [ $DISK_USAGE -gt $THRESHOLD ]; then
    echo "Warning: Disk usage is at ${DISK_USAGE}% which exceeds the threshold of ${THRESHOLD}%"
    echo "Consider cleaning up some files or expanding disk space."
else
    echo "Disk usage is at ${DISK_USAGE}%, which is within the acceptable range."
fi

echo "================================"
